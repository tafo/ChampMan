<Window x:Class="ChampMan.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChampMan.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox ItemsSource="{Binding MatchEvents}" Height="300" Width="500" Margin="10"/>
        <Button Content="Start Match" Click="StartMatch_Click" Width="150" Height="30" Margin="10,320,0,0"/>
    </Grid>
</Window>
